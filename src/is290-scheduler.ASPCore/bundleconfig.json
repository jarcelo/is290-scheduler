// Configure bundling and minification for the project.
// More info at https://go.microsoft.com/fwlink/?LinkId=808241
[
  {
    "outputFileName": "wwwroot/css/site.min.css",
    // An array of relative input file paths. Globbing patterns supported
    "inputFiles": [
      "wwwroot/css/site.css"
    ]
  },
  {
    "outputFileName": "wwwroot/js/site.min.js",
    "inputFiles": [
      "wwwroot/js/site.js"
    ],
    // Optionally specify minification options
    "minify": {
      "enabled": true,
      "renameLocals": true
    },
    // Optinally generate .map file
    "sourceMap": false
  },

  {
    "outputFileName": "Content/bootstrap.min.css",
    "inputFiles": [
      "Content/bootstrap.css"
    ]
  },
  {
    "outputFileName": "Content/fullcalendar.min.css",
    "inputFiles": [
      "Content/fullcalendar.css"
    ]
  },
  {
    "outputFileName": "Scripts/jquery-ui-1.8.11.min.js",
    "inputFiles": [
      "Scripts/jquery-ui-1.8.11.js"
    ],
    "minify": {
      "enabled": true,
      "renameLocals": true
    }
  },
  {
    "outputFileName": "Scripts/lib/moment/moment.min.js",
    "inputFiles": [
      "Scripts/lib/moment/moment.js"
    ],
    "minify": {
      "enabled": true,
      "renameLocals": true
    }
  },
  {
    "inputFiles": [
      "Scripts/lib/fullcalendar/dist/fullcalendar.js"
    ],
    "minify": {
      "enabled": true,
      "renameLocals": true
    },
    "outputFileName": "Scripts/lib/fullcalendar/dist/fullcalendar.min.js"
  }
]