@{
    ViewBag.Title = "Home Page";
}

@section scripts {
    <script>
        $(document).ready(function () {
            $('#calendar').fullCalendar({
                theme: true,
                header: {
                    left: 'prev, next, today',
                    center: 'title',
                    right: 'month, agendaWeek, agendaDay'
                },
                defaultView: 'month',
                editable: true,
                selectable: true,
                allDaySlot: false,
                slotMinutes: 15,
                events: "/Calendar/GetEvents/"
            });
        });
    </script>
    
}

<div class="jumbotron">
    <h1>IS 290 Scheduler</h1>
</div>


<div class="row">
    <div class="col-md-12">
        <h2>Calendar here</h2>
        <div id="calendar"></div>
    </div>
</div>



